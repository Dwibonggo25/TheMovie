<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
        </shape>
    </item>

    <item
        android:bottom="0dp"
        android:left="-120dp"
        android:right="-120dp"
        android:top="-80dp">

        <shape android:shape="oval">
            <gradient
                    android:angle="270"
                    android:startColor="@color/blue_300"
                    android:centerColor="@color/blue_100"
                    android:endColor="@color/red_300"
                    android:type="linear" />
        </shape>

    </item>

</layer-list>