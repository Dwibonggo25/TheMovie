<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="movies"
            type="com.example.jetpack.db.Favorite" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:elevation="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivPosterMovies"
                    imageFromUrl="@{movies.urlPoster}"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bg_rounded"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:srcCompat="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/tvTitleMovies"
                    style="@style/AppTheme.Text.Title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:gravity="center"
                    android:text="@{movies.title}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/ivPosterMovies"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="The Call of the Wild" />

                <ImageView
                    android:id="@+id/ivRates"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/ic_rate"
                    app:layout_constraintStart_toEndOf="@+id/ivPosterMovies"
                    app:layout_constraintTop_toBottomOf="@+id/tvTitleMovies" />

                <TextView
                    android:id="@+id/tvReleaseDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/textview_rounded"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="@{movies.dateReleased}"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="@+id/ivRates"
                    app:layout_constraintTop_toBottomOf="@+id/ivRates"
                    tools:text="Release Date" />

                <TextView
                    android:id="@+id/tvOriginalTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/textview_rounded"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="@{movies.originalTitle}"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/tvReleaseDate"
                    app:layout_constraintTop_toBottomOf="@+id/tvReleaseDate"
                    tools:text="Original Title" />

                <TextView
                    android:id="@+id/tvPreview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="8dp"
                    android:maxLines="2"
                    android:text="@{movies.overview}"
                    android:textStyle="italic"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/tvOriginalTitle"
                    app:layout_constraintTop_toBottomOf="@+id/tvOriginalTitle" />

                <TextView
                    android:id="@+id/tvRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@{movies.vote}"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/ivRates"
                    app:layout_constraintStart_toEndOf="@+id/ivRates"
                    app:layout_constraintTop_toTopOf="@+id/ivRates" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>